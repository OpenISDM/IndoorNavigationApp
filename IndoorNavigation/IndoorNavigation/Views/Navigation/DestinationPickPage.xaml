<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="IndoorNavigation.Views.Navigation.DestinationPickPage"
             Title="Pick Destination">
    
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <OnPlatform.Platforms>
                <On Platform="iOS" Value="0, 0, 0, 25" />
                <On Platform="Android" Value="0, 0, 0, 0" />
                <On Platform="UWP" Value="0, 0, 0, 0" />
            </OnPlatform.Platforms>
        </OnPlatform>
    </ContentPage.Padding>
    
    <ContentPage.Content>
        <ListView x:Name="MyListView"
                  Margin="10, 5, 20, 10" HasUnevenRows="true"
                  ItemsSource="{Binding DestinationItems}" 
                  ItemTapped="Handle_ItemTapped" 
                  CachingStrategy="RecycleElement"
                  IsGroupingEnabled="true"
                  GroupDisplayBinding="{Binding Key}">
            
            <ListView.GroupHeaderTemplate>
                <DataTemplate>
                    <ViewCell Height="35">
                        <StackLayout VerticalOptions="CenterAndExpand"
                                     Padding="15, 1, 15, 1">
                            <Label Text="{Binding Key, StringFormat='{0}æ¨“'}"
                                   TextColor="#3F51B5"
                                   FontAttributes="Bold"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.GroupHeaderTemplate>
            
            <ListView.ItemTemplate>  
                <DataTemplate>
                    <ViewCell Height="70">
                        <StackLayout Orientation="Horizontal"
                                     Padding="20, 20, 20, 1">
                            
                        <Label Text="{Binding WaypointName}" />
                      </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>
    </ContentPage.Content>
    
</ContentPage>
